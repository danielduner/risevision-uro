<?xml version="1.0" encoding="UTF-8"?>
<Template>
    <Style>
	<![CDATA[
	    .tabbedArea {
		position: relative;
		width: 100%;
		height: 100%;
	    }
	    .tabbedArea > div {
		display: inline;
	    }
	    .tabbedArea > span {
		margin-left: -1px;
		position: relative;
		left: 1px;
		display: block;
		float: left;
		padding: 5px 10px;
	    }
	    .tabbedArea > span:hover {
		cursor: pointer;
	    }
	    .tabbedArea > div:target {
		position: absolute;
		z-index: -1;
	    }
	    article {
		border-bottom: 1px solid gray;
	    }
	    article:not(:first-child) {
		padding-top: 10px;
	    }
	    .tabbedArea .time {
		padding-right: 10px;
	    }
	    .scrollContainer {
		position: absolute;
		overflow: hidden;
		margin-top: 20px;
		padding: 0 20px;
		left: 0;
		bottom: 0;
		right: 0;
	    }
	]]>
    </Style>
    <Layout>
	<Navigation>
	    <![CDATA[
	    <div class="tabbedArea"> 
		<div id="dayOne" class="scrollContainer">
		    <div class="content"></div>
		</div>
		<span class="day active tab_font-style"></span>
		<div id="dayTwo" class="scrollContainer">
		    <div class="content"></div>
		</div>
		<span class="day inactive tab_font-style"></span>
		<div id="dayThree" class="scrollContainer">
		    <div class="content"></div>
		</div>
		<span class="day inactive tab_font-style"></span>
		<div id="dayFour" class="scrollContainer">
		    <div class="content"></div>
		</div>
		<span class="day inactive tab_font-style"></span>
		<div id="dayFive" class="scrollContainer">
		    <div class="content"></div>
		</div>
		<span class="day inactive tab_font-style"></span>
		<div id="daySix" class="scrollContainer">
		    <div class="content"></div>
		</div>
		<span class="day inactive tab_font-style"></span>
		<div id="daySeven" class="scrollContainer">
		    <div class="content"></div>
		</div>
		<span class="day inactive tab_font-style"></span>
            </div> 
	    ]]>
	</Navigation>
	<Content>
	    <![CDATA[
	    <article class="event">
		<span class="date location_font-style"></span>
		<span class="time location_font-style"> @ </span>
		<span class="title title_font-style"></span><br />
		<span class="location location_font-style"></span>
		<p class="description description_font-style"></p>
	    </article>
	    ]]>
	</Content>
    </Layout>
</Template>

